{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "MinGW: Build Active file Shell",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-std=c++20",
				"-lfmt",
				"-ldocopt",
                // "-LC:/msys64/mingw64/lib_static",
                // "-LC:/msys64/ucrt64/lib_static",
                // "-lboost_system-mt",
                // "-lboost_filesystem-mt",
                // "-lboost_regex-mt",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}